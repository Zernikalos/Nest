{
  "name": "zernikalos-nest",
  "version": "0.0.1",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "devDependencies": {
    "eslint": "9.9.0",
    "git-cz": "4.9.0",
    "jsdom": "24.1.1",
    "rimraf": "6.0.1",
    "ts-loader": "9.5.1",
    "babel-loader": "9.1.3",
    "typescript": "5.5.4",
    "jest": "29.7.0",
    "ts-jest": "29.2.4",
    "webpack": "5.93.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.0.4",
    "@types/node": "22.4.0",
    "@types/lodash": "4.17.7",
    "@types/jest": "29.5.12",
    "@types/express": "4.17.21"
  },
  "scripts": {
    "commit": "git-cz",
    "start": "npm --workspace @zernikalos/electron -r run start",
    "make": "npm --workspace @zernikalos/electron -r run make",
    "build": "pnpm run build:server && pnpm run build:electron",
    "build:electron": "pnpm --filter @zernikalos/electron -r run build",
    "build:server": "pnpm --filter @zernikalos/nestserver -r run build",
    "lint": "eslint ./engine/**/src/**/*.ts",
    "clean:packages": "pnpm -r exec rimraf node_modules dist",
    "clean": "pnpm clean:packages && rimraf node_modules"
  },
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "nohoist": [
      "**electron**"
    ]
  }
}
