{
  "name": "zernikalos-nest",
  "version": "0.1.0",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "description": "Desktop editor for asset management and debugging of Zernikalos Engine",
  "main": "packages/electronapp/dist/main/index.js",
  "license": "MPL-2.0",
  "scripts": {
    "commit": "git-cz",
    "start": "electron-forge start --enable-logging",

    "premake": "rimraf out",
    "make": "DEBUG=electron-packager electron-forge make --verbose",

    "test:out": "electron dist/main/index.js",

    "dev": "npm run dev:ui & npm run dev:main",
    "dev:main": "DEBUG=true electron dist/main/index.js",
    "dev:ui": "vite -c vite.renderer.config.mjs --force",

    "build": "lerna run build",
    "build:ui": "lerna run build --scope=reactui",
    "build:server": "lerna run build --scope=nestserver",
    "build:electron": "lerna run build --scope=electronapp",

    "predist": "rimraf out",
    "dist": "node scripts/build-electron.js",
    "dist:mac": "node scripts/build-electron.js mac",
    "dist:win": "node scripts/build-electron.js win",
    "dist:linux": "node scripts/build-electron.js linux",
    "dist:all": "node scripts/build-electron.js all",
    "pack": "node scripts/build-electron.js --dir",

    "checkbuild:server": "START_SERVER=true node dist/server/main.js",

    "lint": "eslint ./engine/**/src/**/*.ts",
    "lint:packages": "lerna run lint",
    "test:packages": "lerna run test",
    "clean:packages": "lerna exec -- rimraf node_modules dist",
    "clean": "pnpm clean:packages && rimraf node_modules dist out"
  },
  "dependencies": {
    "nestserver": "workspace:*",
    "rxjs": "7.8.2",
    "crc-32": "1.2.2",
    "strip-ansi": "7.1.2",
    "lodash": "4.17.21",
    "events": "3.3.0",
    "reflect-metadata": "0.2.2",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "lerna": "9.0.3",

    "@eslint/js": "9.39.1",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.20",
    "@types/node": "24.10.1",

    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.8",

    "electron-builder": "26.0.12",

    "@electron-forge/cli": "7.10.2",
    "@electron-forge/maker-dmg": "7.10.2",
    "@electron-forge/plugin-webpack": "7.10.2",
    "@electron-forge/plugin-vite": "7.10.2",
    "@electron-forge/maker-zip": "7.10.2",

    "babel-loader": "10.0.0",
    "eslint": "9.39.1",
    "eslint-plugin-vue": "10.5.1",
    "git-cz": "4.9.0",
    "jest": "30.2.0",
    "jsdom": "27.2.0",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.44.0",
    "vue-eslint-parser": "10.2.0",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2",

    "@types/supertest": "6.0.3",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "chokidar": "4.0.3",

    "vite": "7.2.2",
    "@babel/preset-env": "7.28.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**@electron/**",
      "**@electron-forge/**"
    ]
  },
  "engines": {
    "node": ">=23",
    "pnpm": ">= 9"
  },
  "pnpm": {
    "dangerouslyAllowAllBuilds": true
  }
}
