{
  "name": "zernikalos-studio",
  "version": "0.0.1",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "babel-jest": "29.4.3",
    "eslint": "8.35.0",
    "eslint-plugin-jest": "27.2.1",
    "git-cz": "4.9.0",
    "jest": "29.4.3",
    "jest-circus": "29.4.3",
    "jest-config": "29.4.3",
    "jsdom": "21.1.0",
    "lerna": "6.5.1",
    "pushstate-server": "3.1.0",
    "rimraf": "4.3.0",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "concurrently": "7.6.0"
  },
  "scripts": {
    "commit": "git-cz",
    "samples": "pushstate-server -d ./samples -p 9000",

    "start": "pnpm --parallel --if-present -r run start",

    "studio": "pnpm run --filter @zernikalos/studio dev",
    "electron": "pnpm run --filter @zernikalos/electron dev",

    "studioapp": "concurrently \"pnpm run studio\" \"pnpm run electron\"",

    "lint": "eslint ./engine/**/src/**/*.ts",
    "clean": "rimraf build && lerna exec rimraf node_modules dist && rimraf node_modules",
    "test": "jest"
  }
}
