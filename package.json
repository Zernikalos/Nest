{
  "name": "zernikalos-nest",
  "version": "0.0.1",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.16",
    "@types/node": "22.13.10",
    "babel-loader": "10.0.0",
    "eslint": "9.22.0",
    "eslint-plugin-vue": "10.0.0",
    "vue-eslint-parser": "10.1.1",
    "git-cz": "4.9.0",
    "jest": "29.7.0",
    "jsdom": "26.0.0",
    "rimraf": "6.0.1",
    "ts-jest": "29.2.6",
    "ts-loader": "9.5.2",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.1",
    "webpack": "5.98.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.0"
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "pnpm --recursive --parallel run dev",
    "start": "pnpm --filter @zernikalos/electronapp run start",
    "make": "npm --workspace @zernikalos/electronapp -r run make",
    "build": "npm run build:ui && npm run build:server && npm run build:electron",
    "build:ui": "pnpm --filter @zernikalos/nestui run build",
    "build:server": "pnpm --filter @zernikalos/nestserver run build",
    "build:electron": "pnpm --filter @zernikalos/electronapp run build",
    "lint": "eslint ./engine/**/src/**/*.ts",
    "clean:packages": "pnpm -r exec rimraf node_modules dist",
    "clean": "pnpm clean:packages && rimraf node_modules"
  },
  "workspaces": {
    "packages": [
      "packages/electronapp",
      "packages/nestserver",
      "packages/nestui",
      "packages/store"
    ],
    "nohoist": [
      "**@electron/**",
      "**@electron-forge/**"
    ]
  }
}
