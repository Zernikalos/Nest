{
  "name": "@zernikalos/electron",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Studio",
  "main": "dist/main.js",
  "scripts": {
    "test": "test",
    "start": "tsc && NODE_ENV=dev electron ./dist/main.js",

    "dev": "electron-vite dev",

    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src"
  },
  "dependencies": {
    "@zernikalos/studioserver": "0.0.1"
  },
  "devDependencies": {
    "concurrently": "8.2.0",
    "typescript": "5.1.6",
    "electron": "25.2.0",
    "@types/node": "20.4.0",
    "electron-vite": "1.0.24"
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "author": "Aarón Negrín",
  "license": "ISC"
}
