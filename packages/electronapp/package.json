{
  "name": "@zernikalos/electronapp",
  "productName": "Nest",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Nest",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "main": ".webpack/main/main.js",
  "scripts": {
    "build": "rimraf dist && npm run webpack:main",
    "lint": "eslint .",

    "start": "electron-forge start --enable-logging",
    "package": "electron-forge package --verbose",
    "package:debug": "DEBUG=electron-packager electron-forge package --verbose",
    "make": "electron-forge make --verbose",
    "make:debug": "DEBUG=electron-packager electron-forge make --verbose --skip-package",
    "webpack:main": "webpack -c webpack.main.config.js",
    "webpack:renderer": "webpack -c webpack.renderer.config.js --stats-error-details"
  },
  "dependencies": {
    "@zernikalos/nestserver": "file:../nestserver",
    "electron-store": "8.2.0",
    "lodash": "4.17.21",
    "events": "3.3.0"
  },
  "devDependencies": {
    "concurrently": "9.1.0",
    "electron": "33.2.1",
    "@electron-forge/cli": "7.6.0",
    "@electron-forge/maker-dmg": "7.6.0",
    "@electron-forge/plugin-vite": "7.6.0",
    "@electron-forge/plugin-webpack": "7.6.0",
    "@electron-forge/maker-zip": "7.6.0",
    "ts-loader": "9.5.1",
    "webpack": "5.97.1",
    "babel-loader": "9.2.1",
    "@babel/preset-env": "7.26.0",
    "copy-webpack-plugin": "12.0.2",
    "html-webpack-plugin": "5.6.3",
    "mini-css-extract-plugin": "2.9.2",
    "css-loader": "7.1.2",
    "node-abi": "3.71.0",

    "rfdc": "1.4.1"
  }
}
