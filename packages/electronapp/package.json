{
  "name": "@mrrobotto/electron",
  "version": "0.0.1",
  "description": "Electron app for MrRobotto Studio",
  "main": "src/main.ts",
  "scripts": {
    "test": "test",
    "start": "tsc && NODE_ENV=dev electron ./dist/main.js",

    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src"
  },
  "dependencies": {
    "@mrrobotto/studioserver": "0.0.1"
  },
  "devDependencies": {
    "concurrently": "7.6.0",
    "typescript": "4.9.5",
    "electron": "23.1.2",
    "@types/node": "18.14.6"
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "author": "Aarón Negrín",
  "license": "ISC"
}
