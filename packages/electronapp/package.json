{
  "name": "@zernikalos/electron",
  "productName": "Zernikalos Studio",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Studio",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "main": "dist/main.js",
  "scripts": {
    "ts": "tsc",
    "lint": "eslint -c .eslintrc --ext .ts ./src",

    "start": "electron-forge start",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@zernikalos/studioserver": "0.0.1"
  },
  "devDependencies": {
    "concurrently": "8.2.1",
    "typescript": "5.2.2",
    "electron": "26.2.4",
    "@electron-forge/cli": "6.4.2",
    "@electron-forge/maker-dmg": "6.4.2",
    "@electron-forge/plugin-vite": "6.4.2"
  },
  "build": {
    "appId": "ZernikalosStudio",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "ZernikalosStudio_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
