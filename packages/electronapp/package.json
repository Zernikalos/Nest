{
  "name": "@zernikalos/electronapp",
  "productName": "Nest",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Nest",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "main": "./dist/main/index.js",
  "scripts": {
    "build": "rimraf dist && pnpm run webpack:main && pnpm vite:preload && pnpm vite:renderer",
    "clean": "rimraf dist out",
    "lint": "eslint .",
    "dev": "DEBUG=true electron dist/main/index.js",
    "start": "electron-forge start --enable-logging",
    "package": "electron-forge package",
    "package:debug": "DEBUG=electron-packager electron-forge package",
    "make": "electron-forge make --verbose",
    "make:debug": "DEBUG=electron-packager electron-forge make --verbose",
    "webpack:main": "webpack -c webpack.main.config.js",
    "vite:renderer": "vite build -c vite.renderer.config.js",
    "vite:preload": "vite build -c vite.preload.config.js"
  },
  "dependencies": {
    "@zernikalos/nestserver": "file:../nestserver",
    "electron-store": "8.2.0",
    "lodash": "4.17.21",
    "events": "3.3.0"
  },
  "devDependencies": {
    "electron": "35.0.3",
    "@electron-forge/cli": "7.7.0",
    "@electron-forge/maker-dmg": "7.7.0",
    "@electron-forge/plugin-webpack": "7.7.0",
    "@electron-forge/plugin-vite": "7.7.0",
    "@electron-forge/maker-zip": "7.7.0",
    "ts-loader": "9.5.2",
    "vite": "6.2.2",
    "webpack": "5.98.0",
    "babel-loader": "10.0.0",
    "@babel/preset-env": "7.26.9"
  }
}
