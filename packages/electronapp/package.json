{
  "name": "@zernikalos/electronapp",
  "productName": "Nest",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Nest",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "main": "./dist/main/index.js",
  "scripts": {
    "build": "rimraf dist && pnpm run build:main && pnpm build:preload && pnpm build:renderer",
    "clean": "rimraf dist out",
    "lint": "eslint .",
    "dev": "DEBUG=true electron dist/main/index.js",
    "start": "electron-forge start --enable-logging",
    "package": "electron-forge package",
    "package:debug": "DEBUG=electron-packager electron-forge package",
    "make": "electron-forge make --verbose",
    "make:debug": "DEBUG=electron-packager electron-forge make --verbose",
    "build:main": "webpack -c webpack.main.config.js",
    "build:renderer": "vite build -c vite.renderer.config.mjs",
    "build:preload": "vite build -c vite.preload.config.js"
  },
  "dependencies": {
    "@zernikalos/nestserver": "file:../nestserver",
    "electron-store": "8.2.0",
    "lodash": "4.17.21",
    "events": "3.3.0"
  },
  "devDependencies": {
    "electron": "37.0.0-beta.5",
    "@electron-forge/cli": "7.8.1",
    "@electron-forge/maker-dmg": "7.8.1",
    "@electron-forge/plugin-webpack": "7.8.1",
    "@electron-forge/plugin-vite": "7.8.1",
    "@electron-forge/maker-zip": "7.8.1",
    "ts-loader": "9.5.2",
    "vite": "6.3.5",
    "webpack": "5.99.9",
    "babel-loader": "10.0.0",
    "@babel/preset-env": "7.27.2"
  }
}
