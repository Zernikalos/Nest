{
  "name": "@zernikalos/electron",
  "productName": "Nest",
  "version": "0.0.1",
  "description": "Electron app for Zernikalos Nest",
  "author": "Aarón Negrín <demenus.dev@gmail.com>",
  "license": "GPLv3",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint -c .eslintrc --ext .ts ./src",

    "start": "electron-forge start --enable-logging",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@zernikalos/nestserver": "0.0.1",
    "electron-store": "8.2.0"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "electron": "30.0.2",
    "@electron-forge/cli": "7.2.0",
    "@electron-forge/maker-dmg": "7.2.0",
    "@electron-forge/plugin-vite": "7.2.0"
  },
  "build": {
    "appId": "ZernikalosNest",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "fileAssociations": [
      {
        "ext": "zko",
        "name": "Zernikalos Engine scene object file",
        "perMachine": "true",
        "icon": "assets/icons/zklogo"
      }
    ],
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "ZernikalosNest_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
